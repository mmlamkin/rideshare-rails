<h1><%= @passenger.name %></h1>

<ul>
  <%@passenger.trips.each do |trip|%>
  <li>
    <%=trip.id%>
    <%=trip.date%>
    <%=link_to "#{trip.driver.name}", driver_path(trip.driver.id)%>
    <%=(trip.cost / 100).round(2) %>
    <%=trip.rating%>
    <%= link_to "Edit Passenger", edit_passenger_path %>
  </li>
  <%end%>
</ul>
