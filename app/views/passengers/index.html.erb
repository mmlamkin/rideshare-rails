<h1>Our Awesome Passengers!</h1>

<ul class='passenger-view'>
  <% @passengers.each do |passenger| %>
    <li>
        <img src="http://placecage.com/g/100/100" alt="photo"/>
      <span class='passenger-name'>
      <%= link_to passenger.name, passenger_path(passenger[:id]) %>
      </span>
    </li>
  <% end%>
</ul>
